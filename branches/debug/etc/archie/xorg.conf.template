	EndSubSection
	SubSection "Display"
		Depth     8
		@@MODES@@
	EndSubSection
	SubSection "Display"
		Depth     15
		@@MODES@@
	EndSubSection
	SubSection "Display"
		Depth     16
		@@MODES@@
	EndSubSection
	SubSection "Display"
		Depth     24
		@@MODES@@
	EndSubSection
	SubSection "Display"
		Depth     32
		@@MODES@@
	EndSubSection
EndSection

Section "DRI"
	Mode 0666
EndSection

Section "Extensions"
